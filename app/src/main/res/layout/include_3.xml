                    android:maxLength="5"
                    android:text="0"
                    android:textColor="#ff2b2a2a"
                    android:textSize="@dimen/sp_4" />

                <ImageView
                    android:id="@+id/ic3_iml_i_input"
                    android:layout_width="@dimen/dp_7"
                    android:layout_height="@dimen/dp_7"
