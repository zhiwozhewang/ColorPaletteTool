                    android:layout_toLeftOf="@+id/ic3_sb_s"
                    android:src="@drawable/im_jian" />

                <androidx.appcompat.widget.AppCompatSeekBar
                    android:id="@+id/ic3_sb_s"
                    android:layout_width="@dimen/dp_60"
