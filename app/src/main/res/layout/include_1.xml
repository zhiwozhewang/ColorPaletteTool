<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ic_1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:id="@+id/ic_1_li1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ic_1_view"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/dp_9"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_gravity="center"
            android:src="@drawable/im_take" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_9"
            android:text="@string/take_photo"
            android:textColor="#ff000000"
            android:textSize="@dimen/sp_6" />

    </LinearLayout>

    <View
        android:id="@+id/ic_1_view"
        android:layout_width="@dimen/dp_95"
        android:layout_height="@dimen/dp_1"
        android:layout_centerInParent="true"
        android:background="@color/FFEDEDED" />

    <LinearLayout
        android:id="@+id/ic_1_li2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ic_1_view"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_9"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_gravity="center"
            android:src="@drawable/im_select" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_9"
            android:text="@string/take_photo_album"
            android:textColor="#ff000000"
            android:textSize="@dimen/sp_6" />

    </LinearLayout>

    <TextView
        android:id="@+id/ic1_pay_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ic_1_li2"
        android:layout_marginTop="@dimen/dp_13"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:text="@string/tip_29"
        android:textColor="#ff8e8e93"
        android:textSize="@dimen/sp_5"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/ic1_im_my"
        android:layout_width="@dimen/dp_10"
        android:layout_height="@dimen/dp_10"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_14"
        android:src="@drawable/im_user" />


</RelativeLayout>
