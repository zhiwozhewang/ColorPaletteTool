<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/my_back"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_5"
            android:paddingRight="@dimen/dp_5">

            <ImageView
                android:layout_width="@dimen/dp_4"
                android:layout_height="@dimen/dp_6"
                android:layout_gravity="left|center_vertical"
                android:src="@drawable/im_l_arrow" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="@dimen/dp_6"
                android:text="@string/Back"
                android:textColor="#ffff7b00"
                android:textSize="@dimen/sp_6"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/tip_31"
                android:textColor="#ff434040"
                android:textSize="@dimen/sp_6"
                android:textStyle="bold" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_25"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/my_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ff434040"
                    android:textSize="@dimen/sp_10"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/my_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|bottom"
                    android:textColor="#D5D5D5"
                    android:textSize="@dimen/sp_5"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/my_base"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:background="@drawable/bg_base"
                android:gravity="center"
                android:padding="@dimen/dp_2"
                android:text="@string/tip_32"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp_5"
                android:visibility="visible" />

        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:background="#1A455154" />

        <FrameLayout
            android:id="@+id/my_store_fr"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_25"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:text="@string/Rate_for_us"
                android:textColor="#FF000000"
                android:textSize="@dimen/sp_5" />

            <ImageView
                android:layout_width="@dimen/dp_4"
                android:layout_height="@dimen/dp_6"
                android:layout_gravity="right|center_vertical"
                android:src="@drawable/im_r_arrow" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:layout_gravity="bottom"
                android:background="#1A455154" />


        </FrameLayout>
        <FrameLayout
            android:id="@+id/my_fb_fr"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_25"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:text="@string/str_fb"
                android:textColor="#FF000000"
                android:textSize="@dimen/sp_5" />

            <ImageView
                android:layout_width="@dimen/dp_4"
                android:layout_height="@dimen/dp_6"
                android:layout_gravity="right|center_vertical"
                android:src="@drawable/im_r_arrow" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:layout_gravity="bottom"
                android:background="#1A455154" />


        </FrameLayout>

        <FrameLayout
            android:id="@+id/my_agree_fr"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_25"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:text="@string/privacy"
                android:textColor="#FF000000"
                android:textSize="@dimen/sp_5" />

            <ImageView
                android:layout_width="@dimen/dp_4"
                android:layout_height="@dimen/dp_6"

                android:layout_gravity="right|center_vertical"
                android:src="@drawable/im_r_arrow" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:layout_gravity="bottom"
                android:background="#1A455154" />


        </FrameLayout>

        <FrameLayout
            android:id="@+id/my_about_fr"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_25"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:text="@string/about_us"
                android:textColor="#FF000000"
                android:textSize="@dimen/sp_5" />

            <ImageView
                android:layout_width="@dimen/dp_4"
                android:layout_height="@dimen/dp_6"
                android:layout_gravity="right|center_vertical"
                android:src="@drawable/im_r_arrow" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:layout_gravity="bottom"
                android:background="#1A455154" />


        </FrameLayout>

        <TextView
            android:id="@+id/my_upgrade"
            android:layout_width="@dimen/dp_110"
            android:layout_height="@dimen/dp_16"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_6"
            android:background="@drawable/bg_upgrade"
            android:gravity="center"
            android:text="@string/update"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_6"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/my_restore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_6"
            android:text="Restore Your Purchase"
            android:textColor="#ffff7b00"
            android:textSize="@dimen/sp_5"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/web_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_6"
            android:text="@string/Logout"
            android:textColor="#ffff7b00"
            android:textSize="@dimen/sp_6"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_6"
            android:gravity="center"
            android:text="@string/copyright_2009_2019_n"
            android:textColor="#D5D5D5"
            android:textSize="@dimen/sp_5" />


    </LinearLayout>

    <TextView
        android:id="@+id/my_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_6"
        android:textColor="#D5D5D5"
        android:textSize="@dimen/sp_6"
        android:textStyle="bold" />

</FrameLayout>